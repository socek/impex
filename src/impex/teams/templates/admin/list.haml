-extends "impex.application:templates/authencitated.haml"
-import 'impex.utils:templates/table.haml' as table
-block content
    %div.col-lg-12
      %div.bs-component
        %div.jumbotron
          %h1
            Lista drużyn&nbsp;
            =table.add_button(route_path('teams:admin:create'))

          %table.table.table-striped.table-hover
            %thead
              %tr
                =table.index_header()
                %th -> Nazwa
                %th -> Miejscowość
                %th -> Akcje

            %tbody
              -for team in teams:
                %tr.withactions
                  =table.index_row(loop)
                  %td
                    =team.name
                  %td
                    =team.hometown
                  %td
                    =table.edit_button(route_path('teams:admin:edit', team_id=team.id))


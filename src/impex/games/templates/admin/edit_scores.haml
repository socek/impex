                  %input.quart type="text" name="left_quart_2" disabled
                %td
                  %input.sum type="text" name="right_quart_2_sum"
                %td {% if not with_diff %}class="hide"{% endif %}
                  %input.quart type="text" name="right_quart_2" disabled
              %tr
                %td
                  3
                %td
                  %input.sum type="text" name="left_quart_3_sum"
                %td {% if not with_diff %}class="hide"{% endif %}
                  %input.quart type="text" name="left_quart_3" disabled
                %td
                  %input.sum type="text" name="right_quart_3_sum"
                %td {% if not with_diff %}class="hide"{% endif %}
                  %input.quart type="text" name="right_quart_3" disabled
              %tr
                %td
                  4
                %td
                  %input.sum type="text" name="left_quart_4_sum"

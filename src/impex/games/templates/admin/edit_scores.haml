-extends "impex.application:templates/authencitated.haml"
-import 'impex.utils:templates/table.haml' as table
-block content
  -set with_diff=True
  =need('scoretable')
    %div.col-lg-12
      %div.bs-component
        %div.jumbotron.jumbotron2
          %h1
            Tabela Wyników&nbsp;

          %table.table.table-striped.table-hover
            %thead
              %tr
                %th -> Kwarta
                %th -> Lewa
                -if with_diff:
                  %th -> (Różnica)
                %th -> Prawa
                -if with_diff:
                  %th -> (Różnica)

            %tbody
              %tr
                %td
                  1
                %td {% if with_diff %}colspan="2"{% endif %}
                  %input.sum type="text" name="left_quart_1"

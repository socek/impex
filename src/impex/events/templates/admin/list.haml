-extends "impex.application:templates/authencitated.haml"
-block content
    %div.col-lg-12
      %div.bs-component
        %div.jumbotron
          %h1
            Lista wydarzeÅ„&nbsp;
            %a.btn.btn-small.btn-success.fa.fa-plus href="{{route_path('events:admin:create')}}"

          %table.table.table-striped.table-hover
            %thead
              %tr
                %th -> #
                %th -> Nazwa
                %th -> Opublikowane
                %th -> Akcje

            %tbody
              -for event in events:
                %tr
                  %td
                    =loop.index
                  %td
                    {{event.name}}
                  %td
                    -if event.is_visible:
                      %i.fa.fa-check style="color: #5cb85c;"
                    -else:
                      %i.fa.fa-times style="color: red;"
                  %td
                    %a.fa.btn.btn-success.btn-sm.fa-pencil href="{{route_path('events:admin:edit', event_id=event.id)}}"
                    %a.fa.btn.btn-danger.btn-sm.fa-trash-o href="#"

%table.table.table-striped.table-nonfluid
  -if with_top:
    %tr
      %td.label-success.text-center colspan="{{colspan}}"
          =event.name
  %tr
    %td
      %a.label.label-primary href="{{route_path('games:timetable', event_id=event.id)}}"
        Terminarz
    %td
      %a.label.label-primary href="{{route_path('games:list', event_id=event.id)}}"
        Wszystkie mecze
    -for group in groups:
      %td
        %a.label.label-warning href="{{route_path('games:group_list', event_id=event.id, group_id=group.id)}}"
          =group.name

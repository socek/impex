[app:main]
use = egg:{{settings['package_name']}}

[server:main]
use = egg:waitress#main
host = 0.0.0.0
port = 8000

{% for key, data in settings['loggers'].items() %}
[{{key}}]
    {% for name, value in data.items() -%}
        {{name}} = {{value}}
    {% endfor -%}
{% endfor %}
[alembic]
    {% for name, value in alembic.items() -%}
        {{name}} = {{value}}
    {% endfor %}

[uwsgi]
socket = 0.0.0.0:8000
master = true
need-app = true
processes = 4
pythonpath = *.egg
